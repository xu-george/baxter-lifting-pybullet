<robot name="ball">
  <link name="block">
    <contact>
      <friction_anchor/>
      <lateral_friction value="1.0"/>
      <rolling_friction value="0.0"/>
      <contact_cfm value="0.0"/>
      <contact_erp value="1.0"/>
      <stiffness value="1000"/>
      <damping value="50"/>
    </contact>

    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
       <mass value="0.05"/>
       <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>

    <visual>
      <origin xyz="0.0 0.00 0.00"/>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="blue">
        <color rgba="0.5 .5 1 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0.0 0.0 0.0"/>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
    </collision>
  </link>
</robot>

